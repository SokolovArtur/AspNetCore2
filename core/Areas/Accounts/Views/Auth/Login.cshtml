@model LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Войти";
}

<h2>@ViewData["Title"]</h2>

<div class="section">
    <form asp-area="Accounts" asp-controller="Auth" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="section">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        </div>

        <div class="section">
            <div class="md-form">
                <i class="fa fa-user-o prefix grey-text"></i>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="md-form">
                <i class="fa fa-lock prefix grey-text"></i>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RememberMe" type="checkbox" checked="checked">
                <label asp-for="RememberMe"></label>
            </div>
        </div>
        
        <div class="section">
            <button type="submit" class="btn btn-primary">Войти</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
