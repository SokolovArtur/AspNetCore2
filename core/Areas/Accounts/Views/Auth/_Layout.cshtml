<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Tochka</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/files/lib/Font-Awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/files/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/files/lib/MDBootstrap/css/mdb.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/files/lib/Font-Awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/files/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/files/lib/MDBootstrap/css/mdb.min.css" />
    </environment>

    @RenderSection("StyleSheet", required: false)

    <environment include="Development">
        <link rel="stylesheet" href="~/files/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/files/css/site.min.css" asp-append-version="true" />
    </environment>

    <link rel="icon" type="image/png" href="~/files/favicon.png" />
</head>
<body class="fixed-sn light-blue-skin">
    
    <!-- Main layout -->
    <main>
        <div class="container-fluid">
            <div class="row justify-content-md-center">
                <div class="col-md-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    <!--/. Main layout -->

    <environment include="Development">
        <script src="~/files/lib/jquery/dist/jquery.js"></script>
        <script src="~/files/lib/popper.js/dist/umd/popper.js"></script>
        <script src="~/files/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/files/lib/MDBootstrap/js/mdb.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/files/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/files/lib/popper.js/dist/umd/popper.min.js"></script>
        <script src="~/files/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/files/lib/MDBootstrap/js/mdb.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)

    <environment include="Development">
        <script src="~/files/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/files/js/site.min.js" asp-append-version="true"></script>
    </environment>
</body>
</html>
