@model Tochka.Areas.Hr.Models.VacancyRecordViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Vacancy</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-area="Hr" asp-controller="Vacancies" asp-action="Edit">
            @{await Html.RenderPartialAsync("_RecordPartial");}

            <div>
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-area="Hr" asp-controller="Vacancies" asp-action="Index" class="btn btn-default">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section StyleSheet {
    @{Html.RenderPartial("_MarkdownEditorStyleSheetPartial");}
}

@section Scripts {
    @{Html.RenderPartial("_MarkdownEditorScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
