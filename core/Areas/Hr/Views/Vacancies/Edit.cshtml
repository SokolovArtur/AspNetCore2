@model Tochka.Areas.Hr.Models.VacancyRecordViewModel

@{
    ViewData["Title"] = "Редактирование вакансии";
}

<h2>Редактирование вакансии</h2>

<div class="section">
    <form asp-area="Hr" asp-controller="Vacancies" asp-action="Edit">
        @{await Html.RenderPartialAsync("_RecordPartial");}

        <div class="section">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-area="Hr" asp-controller="Vacancies" asp-action="Index" class="btn btn-default">Вернуться к списку</a>
        </div>
    </form>
</div>

@section StyleSheet {
    @{Html.RenderPartial("_MarkdownEditorStyleSheetPartial");}
}

@section Scripts {
    @{Html.RenderPartial("_MarkdownEditorScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
