@model IEnumerable<Tochka.Areas.Hr.Data.Vacancy>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="toolbar">
    <a asp-area="Hr" asp-controller="Vacancies" asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Annotation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Annotation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <a asp-area="Hr" asp-controller="Vacancies" asp-action="Edit" asp-route-id="@item.Id" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                <a asp-area="Hr" asp-controller="Vacancies" asp-action="Details" asp-route-id="@item.Id" title="Details"><i class="fa fa-eye"></i></a>
                <a asp-area="Hr" asp-controller="Vacancies" asp-action="Delete" asp-route-id="@item.Id" title="Delete"><i class="fa fa-times"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
